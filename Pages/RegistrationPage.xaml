<Page x:Class="Task6.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task6.Pages"
      FontFamily="Comic Sans MS">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        <Border Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="445"
                Height="485"
                CornerRadius="55"
                BorderBrush="#3f3fd0"
                BorderThickness="2"
                Background="#ffffff">
            <Grid>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                    <StackPanel Margin="0 30 0 0">
                        <TextBlock FontSize="26"
                                   FontWeight="SemiBold">
                            <Run Text="Практическая работа "
                                 Foreground="#FF851FEF"/>
                            <Run Text="№6"
                                 Foreground="#FF851FEF"/>
                        </TextBlock>

                        <TextBlock Text="Работа с SQLite"
                                   TextAlignment="Center"
                                   FontWeight="Regular"
                                   FontSize="15"
                                   Foreground="#67686f"/>
                        <materialDesign:PackIcon Kind="Bread"
                                                 Margin="0 20 0 0"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FF851FEF"
                                                 Height="110"
                                                 Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 20 0 0">
                        <materialDesign:PackIcon Kind="Email"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0 3 10 0"/>
                        <TextBox Width="305"
                                 x:Name="TbLogin"
                                 FontWeight="Regular"
                                 Foreground="#67686f"
                                 FontSize="15"
                                 materialDesign:HintAssist.Hint="Введите адрес электронной почты..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#ffffff"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                             Margin="0 20 0 0">
                        <materialDesign:PackIcon Kind="Password"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0 3 10 0"/>
                        <PasswordBox Width="305"
                                     FontWeight="Regular"
                                     x:Name="PbPassword"
                                     Foreground="#67686f"
                                     FontSize="15"
                                     materialDesign:HintAssist.Hint="Введите пароль..."
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#ffffff"/>
                    </StackPanel>
                    <StackPanel Margin="0 20 0 0">
                        <CheckBox Content="Отобразите пароль"
                                  Foreground="#5b5b5b"
                                  Background="#3f3fd0"
                                  Cursor="Hand"
                                  FontSize="15"/>
                    </StackPanel>

                    <StackPanel Margin="0 20 0 0"
                                Orientation="Horizontal">
                        <Button Width="167"
                                Margin="0 0 20 0"
                                x:Name="BtnCreate"
                                Click="BtnCreate_Click"
                                Height="50"
                                Background="Transparent"
                                BorderBrush="#3f3fd0"
                                Foreground="#3f3fd0"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonProgressAssist.Value="-1"
                                materialDesign:ButtonProgressAssist.IndicatorForeground="#3F3FD0"
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Pen"
                             Margin="0 2 3 0"/>
                                <TextBlock Text="Создать аккаунт"/>
                            </StackPanel>
                        </Button>
                        <Button Width="156"
                                x:Name="BtnBack"
                                Click="BtnBack_Click"
                                Height="50"
                                Background="#3F3FD0"
                                BorderBrush="#3F3FD0"
                                Foreground="#ffff"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonProgressAssist.Value="-1"
                                materialDesign:ButtonProgressAssist.IndicatorForeground="#ffffff"
                                materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="SpyOff"
                               Margin="0 2 3 0" />
                                <TextBlock Text="Или войти" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
