<Page x:Class="Task6.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Task6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700"
      d:DesignWidth="1024"
      FontFamily="Comic Sans MS">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="445"
                Height="485"
                CornerRadius="55"
                BorderBrush="#3f3fd0"
                BorderThickness="2"
                Background="#ffffff">
            <Grid>
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Top">
                    <StackPanel Margin="0 30 0 0">
                        <TextBlock FontSize="26"
                                   HorizontalAlignment="Center"
                                   FontWeight="SemiBold">
                            <Run Text="Появление батонят"   
                                 Foreground="#FF851FEF"/>
                        </TextBlock>

                        <TextBlock Text="Работа с SQLite"
                                   TextAlignment="Center"
                                   FontWeight="Regular"
                                   FontSize="15"
                                   Foreground="#67686f"/>
                        <materialDesign:PackIcon Kind="Bread"
                                                 Margin="0 20 0 0"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FF851FEF"
                                                 Height="110"
                                                 Width="100"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 20 0 0">
                        <materialDesign:PackIcon Kind="Email"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0 3 10 0"/>
                        <TextBox Width="305"
                                 x:Name="TbLogin"
                                 FontWeight="Regular"
                                 Foreground="#67686f"
                                 FontSize="15"
                                 materialDesign:HintAssist.Hint="Введите адрес электронной почты..."
                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                 materialDesign:TextFieldAssist.UnderlineBrush="#ffffff"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                             Margin="0 20 0 0">
                        <materialDesign:PackIcon Kind="Password"
                                                 Width="25"
                                                 Height="25"
                                                 Margin="0 3 10 0"/>
                        <PasswordBox Width="305"
                                     FontWeight="Regular"
                                     x:Name="PbPassword"
                                     Foreground="#67686f"
                                     FontSize="15"
                                     materialDesign:HintAssist.Hint="Введите пароль..."
                                     materialDesign:TextFieldAssist.HasClearButton="True"
                                     materialDesign:TextFieldAssist.UnderlineBrush="#ffffff"/>
                    </StackPanel>
                    <StackPanel Margin="0 20 0 0">
                        <CheckBox Content="Запомнить пароль"
                                  Foreground="#5b5b5b"
                                  Background="#3f3fd0"
                                  Cursor="Hand"
                                  FontSize="15"/>
                    </StackPanel>

                    <StackPanel Margin="0 20 0 0"
                                Orientation="Horizontal">
                        <Button Width="120"
                                Margin="0 0 20 0"
                                x:Name="BtnLogin"
                                Click="BtnLogin_Click"
                                Height="50"
                                Background="#3f3fd0"
                                BorderBrush="#3f3fd0"
                                Foreground="#ffffff"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                materialDesign:ButtonProgressAssist.Value="-1"
                                materialDesign:ButtonProgressAssist.IndicatorForeground="#ffffff"
                                materialDesign:ButtonProgressAssist.IndicatorBackground="Transparent"
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                                IsEnabled="{Binding DataContext.ControlsEnabled,
                            RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="LoginVariant"
                             Margin="0 2 3 0"/>
                                <TextBlock Text="Войти"/>
                            </StackPanel>
                        </Button>
                        <Button Width="220"
                                x:Name="BtnRegistration"
                                Click="BtnRegistration_Click"
                                Height="50"
                                Background="Transparent"
                                BorderBrush="#3F3FD0"
                                Foreground="#3F3FD0"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                materialDesign:ButtonProgressAssist.Value="-1"
                                materialDesign:ButtonProgressAssist.IndicatorForeground="#3F3FD0"
                                materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                                materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                            <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Terrain"
                               Margin="0 2 3 0" />
                                <TextBlock Text="Создать аккаунт" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
